<style>
  section {
    max-width: var(--media-lg);
    gap: 4em;
    padding: 4em 1em;

    @media (max-width: 720px) {
      gap: 2em;
      padding: 2em;
    }
  }

  h1 {
    border-left: 6px solid var(--accent) !important;
    padding: 2rem;

    @media (max-width: 720px) {
      padding: 1rem;
    }
  }

  ul {
    gap: 1em;
  }

  li {
    background-color: var(--base);
    text-align: center;
    border-left: 4px solid var(--accent-100) !important;
    border-radius: 0.25em;
    box-shadow: 0 5px 10px hsl(var(--base-500-hsl), 0.4);
    padding: 1em;

    @media (max-width: 720px) {
      width: 100%;
      text-align: left;
    }
  }
</style>
