---
import FormattedDate from "@components/FormattedDate.astro";

const { post } = Astro.props;
const { slug, data } = post;
const { title, description, pubDate, image } = data;
---

<article class="col wfull">
  <a class="col full" href={`/noticies/${slug}`}>
    <img class="wfull" src={image} alt={title} />

    <main class="col wfull">
      <small><FormattedDate date={pubDate} /></small>
      <h3>{title}</h3>
      <p>
        {description}
        {description}
        {description}
        {description}
      </p>
    </main>
  </a>
</article>

<style>
  article {
    width: calc(100% / 3 - 1em);
    background-color: var(--base);
    border: 1px solid var(--base-100);
    border-bottom: 4px solid var(--accent);
    border-radius: 1em;
    box-shadow: 0 5px 20px hsl(var(--base-500-hsl), 0.2);
    margin-bottom: 1em;
    overflow: hidden;

    @media (max-width: 720px) {
      width: 100%;
      margin-bottom: 0.5em;
      border-bottom: 2px solid var(--accent);
    }

    & img {
      aspect-ratio: 4/3;
      clip-path: polygon(0 0, 100% 0, 100% 90%, 0 100%);
    }

    & main {
      padding: 1em;

      @media (max-width: 720px) {
        padding: 0.5em;
      }
    }

    & p {
      margin-top: 1em;
    }
  }
</style>
